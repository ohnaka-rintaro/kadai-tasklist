<h1>id: <%= @task.id %>のタスク詳細ページ</h1>

<table class="table table-borderd">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
</table>


<%= link_to 'このメッセージを編集する', edit_task_path(@task), class: 'btn btn-desault' %>
<%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: 'マジで削除するけど大丈夫？いいの？' }, class: 'btn btn-danger' %>
